{
    "compilerOptions": {
        "incremental": true,
        "target": "ES2020",
        "module": "ES2020",
        "moduleResolution": "bundler",
        "declaration": true,
        "strict": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "composite": true,
        "baseUrl": "./",
        "paths": {
            "@/*": ["./src/*"],
        }
    },
    "include": ["**/*.ts"]
}