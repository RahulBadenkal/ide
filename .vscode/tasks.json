{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "command": "npm run build:dev --workspace=apps/backend",
            "label": "build-backend",
            "detail": "Build backend task",
            "isBackground": true
        },
        {
            "type": "shell",
            "command": "${input:stop-build-backend}",
            "label": "stop-build-backend",
            "detail": "Stop build backend task"
        },
    ],
    "inputs": [
        {
            "id": "stop-build-backend",
            "type": "command",
            "command": "workbench.action.tasks.terminate",
            "args": "build-backend"
        }
    ]
}