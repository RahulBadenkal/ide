{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "backend",
            "cwd": "${workspaceFolder}/apps/backend/dist",
            "runtimeExecutable": "node",
            "runtimeArgs": [
                "--watch",
                "--env-file=.env",
                "index.mjs"
            ],
            "preLaunchTask": "build-backend",
            "postDebugTask": "stop-build-backend"
        }
        // repeat for each debuggable app
    ]
}